    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": false,
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"]
}
