<Window x:Class="SystemLogsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SystemLogsApp"
        Title="System Logs Application" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <local:SystemLogFilters x:Name="LogFilters" Grid.Row="0"/>
        <local:SystemLogsList x:Name="LogsList" Grid.Row="1"/>
    </Grid>
</Window>